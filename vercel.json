{
  "version": 2,
  "builds": [
      {
          "src": "./index.js",
          "use": "@vercel/node"
      }
  ],
  "rewrites": [
    { "source": "/(.*)", "destination": "./index.js" }
],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET,POST,PUT,DELETE,PATCH,OPTIONS",
        "Access-Control-Allow-Headers": "Authorization,Accept,Cache-Control,Content-Length,Content-Type"
      }
    }
  ]
}
  